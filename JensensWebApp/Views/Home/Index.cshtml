@model IList<JensensWebApp.Models.Article>

@{
    ViewBag.Title = "Articles";

    Dictionary<string, string> topicDisplayNames = new Dictionary<string, string>
    {
        {"Halsa", "Hälsa"},
        {"SamhalleKonflikter", "Samhälle/Konflikter"},
        {"Miljo", "Miljö"},
        {"VetenskapTeknik", "Vetenskap/Teknik"},
        {"LivsstillFritt", "Livsstil/Fritid"},
        {"Ekonomi", "Ekonomi"},
        {"Religion", "Religion"},
        {"Idrott", "Idrott"}
    };

    string GetTopicDisplayName(string key)
    {
        return topicDisplayNames.ContainsKey(key) ? topicDisplayNames[key] : key;
    }
}

<img src="../Articles.png" alt="Article img" class="article-pic">

<div class="container">
    <div class="form-container">
        <div class="form-div">
            @using (Html.BeginForm("Index", "Home", FormMethod.Get, new { id = "filterForm" }))
            {
                <div class="dropdown-row">
                    <div id="select-topic-container" class="dropdown">
                        <select id="topic" name="topic" class="form-select" title="Select topic">
                            <option value="">Select a topic:</option>
                            @foreach (var topic in topicDisplayNames)
                            {
                                <option value="@topic.Key">@topic.Value</option>
                            }
                        </select>
                        <ul class="dropdown-options">
                            @foreach (var topic in topicDisplayNames)
                            {
                                <li><a href="#" data-value="@topic.Key">@topic.Value</a></li>
                            }
                        </ul>
                    </div>

                    <div id="select-sort-container" class="dropdown">
                        <select id="sortBy" name="sortBy" class="form-select">
                            <option value="">Sort by:</option>
                            <option value="newest">Newest to Oldest</option>
                            <option value="oldest">Oldest to Newest</option>
                        </select>
                        <ul class="dropdown-options">
                            <li><a href="#" data-value="newest">Newest to Oldest</a></li>
                            <li><a href="#" data-value="oldest">Oldest to Newest</a></li>
                        </ul>
                    </div>
                </div>

                <button type="button" id="resetButton" class="btn btn-secondary">Reset</button>

                <div class="total-articles">
                    <p id="displayedArticlesText" class="form-text">Total Articles: <span id="displayedArticlesCount"></span></p>
                </div>
            }
        </div>
    </div>
</div>



    <div id="summary-modal" class="modal">
            <span class="closeBtn">&times;</span>
        <div class="modal-content">
            <h3>Loading...</h3>
            <p></p>
        </div>
    </div>

    <div id="cards-container">
        <!-- Articles will be inserted here -->
    </div>
    <button id="loadMoreButton">Load more</button> <!-- button for moving more cards to the visible div -->

    <div id="allCards" class="cards-container-hidden"> <!-- hidden div to load all the articles in when loading the page -->
        @foreach (var article in Model)
        {
            <div class="card-container" data-topic="@article.Topic.FirstOrDefault()">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@article.Title</h5>
                        <p class="card-text">@article.Summary</p>
                        <button class="summarizeBtn">Summarize with AI</button>
                        <a href="@article.Link" class="card-link" target="_blank">Read More</a>
                        <p class="card-text-muted"><small class="text-muted">@article.Published.ToString("yyyy-MM-dd HH:mm:ss")</small></p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
